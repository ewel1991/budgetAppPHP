{
    "name": "lenovo/budget-app",
    "description": "A PHP application for budget",
    "type": "project",
    "authors": [
        {
            "name": "ewel1991",
            "email": "ewelina.beben.programista@gmail.com"
        }
    ],
    "require": {
        "vlucas/phpdotenv": "^5.6",
        "gemini-api-php/client": "^1.7",
        "symfony/http-client": "^7.3",
        "nyholm/psr7": "^1.8",
        "guzzlehttp/guzzle": "^7.9",
        "google-gemini-api-php/client": "^1.0",
        "google-gemini-php/client": "^2.5"
    },
    "autoload":{
        "psr-4": {
           "Framework\\": "src/Framework",
           "App\\":"src/App"
        },
        "files":[
           "src/App/Config/Routes.php",
           "src/App/Config/Middleware.php" 
        ]

    },

    "scripts":{
        "budgetapp": "php cli.php"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
